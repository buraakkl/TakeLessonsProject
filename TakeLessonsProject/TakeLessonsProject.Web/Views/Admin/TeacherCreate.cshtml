@model TeacherWithCategoriesModel


<h1>Create Teacher</h1>

<hr />


<form asp-controller="Admin" asp-action="TeacherCreate" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            @*Buraya Product bilgileri gelecek*@
            <div class="form-group row mb-2">
                <div class="col-md-2">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="FirstName" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <div class="col-md-2">
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="LastName" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <div class="col-md-2">
                    <label asp-for="Location"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="Location" />
                </div>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group row mb-2">
                <div class="col-md-2">
                    <label asp-for="HourlyPrice"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="HourlyPrice" />
                </div>
                <span asp-validation-for="HourlyPrice" class="text-danger"></span>
            </div>

            <div class="form-group row mb-2">
                <div class="col-md-2">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="Email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group row mb-2">
                <div class="col-md-2">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-md-10">
                    <textarea name="Description" asp-for="Description"> </textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>

            <div class="form-group row mb-2">
                <div class="col-md-2">
                    <label asp-for="Image">Image</label>
                </div>


                <div class="col-md-10">
                    <input type="file" name="file" id="formFile" accept="image/" />
                </div>
                <span class="text-danger">@ViewBag.ImageErrorMessage</span>

            </div>

            <div class="form-group row mb-2">
                <div class="col-md-10 offset-2">
                    <button class="btn btn-success" type="submit">Save</button>
                </div>

            </div>
        </div>

        <div class="col-md-4">




            @foreach (var educationLevel in (List<StateOfEducationsLevel>)ViewBag.EducationLevels)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox"
                       class="form-check-input"
                       value="@educationLevel.StateOfEducationsLevelId"
                       name="EducationLevelId" />




                    <label class="custom-control-label">@educationLevel.Name</label>
                </div>
            }

            <hr>

            @foreach (var branch in (List<Branch>) ViewBag.Branchs)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox"
                       class="form-check-input"
                       value="@branch.BranchId"
                       name="BranchId" />




                    <label class="custom-control-label">@branch.Name</label>
                </div>
            }
        </div>
    </div>
</form>