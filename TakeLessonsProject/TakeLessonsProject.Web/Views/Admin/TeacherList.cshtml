@model List<Teacher>


<h1 class="display-5 text-primary">Teacher List</h1>
<hr />
<div>
    <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="TeacherCreate">Create Teacher</a>
</div>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Branch</th>
            <th scope="col">Location</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@teacher.Image" width="50" />
                </td>
                <td>@teacher.Id</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.Branch.Name</td>
                <td>@teacher.Locations</td>


                <td>
                    <a asp-controller="Admin"
                   asp-action="TeacherEdit"
                   asp-route-id=@teacher.Id
                   class="btn btn-sm btn-secondary">Details/Edit</a>



                    <!-- Button trigger DeleteModal -->
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal_@teacher.Id">
                        Delete
                    </button>

                    <!-- DeleteModal -->
                    <div class="modal fade" id="DeleteModal_@teacher.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Warning!</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p class="text-danger">The teacher profile will be deleted!</p>
                                    <p>Are you sure?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                    <a asp-controller="Admin"
                                   asp-action="TeacherDelete"
                                   asp-route-id=@teacher.Id
                                   class="btn btn-danger">Yes</a>
                                </div>
                            </div>
                        </div>
                    </div>




                </td>
            </tr>
        }
    </tbody>
</table>