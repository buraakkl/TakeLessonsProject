@{
    ViewData["Title"] = "Details";
}

@model TeacherDetailModel

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/images/@Model.Teacher.Image" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.Teacher.FirstName @Model.Teacher.LastName</h5>
                        <p class="text-muted mb-1">@Model.Teacher.Branch</p>
                        <p class="text-muted mb-4">@Model.Teacher.Description</p>
                        <div class="d-flex justify-content-center mb-2">
                            <button class="btn btn-primary" onclick="location.href='mailto:@(Model.Teacher.Email)';">Send Mail</button>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Teacher.FirstName @Model.Teacher.LastName</p>
                            </div>
                        </div>
                        <hr/>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Teacher.Email</p>
                            </div>
                        </div>
                        <hr/>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Teacher.Locations</p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Is Face To Face</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@(Model.Teacher.IsFaceToFace ? "Yes" : "No")</p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Hourly Price</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Teacher.HourlyPrice $</p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Registration Date</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Teacher.DateOfRegistration</p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Educator Certificate</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@(Model.Teacher.CertifiedTrainer ? "Yes" : "No")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>